<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
    android:fillViewport="false"
    tools:context="com.cs160.arman.represent.input_method"
    tools:showIn="@layout/activity_input_method">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#4180D6"
            android:orientation="vertical">



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sen. Barbara Boxer"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/sen_boxer" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="bigb@congress.com"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="barbaraboxer.com"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:src="@drawable/twitter" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This outrageous law has already forced more than half the clinics in Texas to close. We must #StopTheSham http://wapo.st/1WTegX0"
            android:background="#FFF"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="get detailed view" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#4180D6"
        android:orientation="vertical"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sen. Dianne Feinstein"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sen_fein" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="diannefeinstein@congress.com"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="https://www.feinstein.senate.gov"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:src="@drawable/twitter" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The federal government needs authority to aggressively pursue transnational criminal organizations to reduce flow of drugs into our country."
            android:background="#FFF"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="get detailed view" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#E16262"
        android:orientation="vertical"
        android:layout_marginTop="10dp">



        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rep. Darrel Issa"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/issa" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="darrellissa@house.gov"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="darrellissa.com"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:src="@drawable/twitter" />


        <TextView
            android:layout_margin="10dp"
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:text="Judge gets it right. Can't force Apple to undermine users' privacy http://ow.ly/YUydb "
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="get detailed view" />


    </LinearLayout>



    </LinearLayout>





</ScrollView>